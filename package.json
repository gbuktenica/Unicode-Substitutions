{
    "name": "unicode-substitutions",
    "displayName": "Unicode-Substitutions",
    "description": "Corrects common unicode substitutions such as quotes and hyphens.",
    "version": "1.0.1",
    "publisher": "GlenBuktenica",
    "icon": "images/icon.png",
    "license": "MIT",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Linters",
        "Formatters"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "contributes": {
        "configuration": {
            "title": "unicodesubsitutions configuration",
            "type": "object",
            "properties": {
                "unicodesubsitutions.rules": {
                    "description": "Array of paths for custom rules to include when linting",
                    "scope": "window",
                    "type": "array",
                    "items": {
                        "type": "array"
                    },
                    "default": [
                        {
                            "invalid": "–",
                            "valid": "-",
                            "message": "En Dash should be a Hyphen."
                        },
                        {
                            "invalid": "—",
                            "valid": "-",
                            "message": "Em Dash should be a Hyphen"
                        },
                        {
                            "invalid": "“",
                            "valid": "\"",
                            "message": "Start double quotes should be straight double quotes"
                        },
                        {
                            "invalid": "”",
                            "valid": "\"",
                            "message": "End double quotes should be straight double quotes"
                        },
                        {
                            "invalid": "‘",
                            "valid": "\"",
                            "message": "Start single quote should be straight single quote"
                        },
                        {
                            "invalid": "’",
                            "valid": "\"",
                            "message": "End single quote should be straight single quote"
                        }
                    ]
                }
            }
        }
    },
    "devDependencies": {
        "vscode": "^1.1.17",
        "typescript": "^3.0.3",
        "@types/node": "7.0.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/gbuktenica/Unicode-Substitutions.git"
    }
}
