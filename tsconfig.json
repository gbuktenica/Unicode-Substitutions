{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es7"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true
        //"strict": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "include": [
        "src/**/*.ts",
        "src/test/**/*.ts",
        "./node_modules/vscode/vscode.d.ts",
        "./node_modules/vscode/lib/*",
    ]
}
